<h1>Hae ilmoituksia</h1>			
<% form_tag({ :action => "search" }, :method => "get") do %>
  <br />
  <table class="form">
    <tr>
      <td><b><%= t(:search_keyword) %>:</b></td>
      <td><%= text_field_tag "q", params[:q], :size => 30 %></td>
      <td><%= submit_tag t(:search), :onclick => "this.disabled=true,this.form.submit();", :class => "button" %></td>
      <td><%= link_to t(:advanced_search), "?type=advanced" %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>
        <table class="no_padding">
          <tr>
            <td>
              <%= check_box_tag params[:only_open], "true", :checked => "checked" %>
            </td>
            <td>
              <%= t(:search_only_open) %>
            </td>  
          </tr>
        </table>    
      </td>
      <td></td>
      <td></td>
    </tr>
  </table>
<% end %>

<br />

<% if @invalid %>
  <p><%= t(:invalid_char_in_search) %></p>
<% end %>

<% if params[:q]%>

<h4><%= t(:search_results) %></h4>
<% if @listings && @listings.size > 0 %>
<table class="listing">
<%= render :partial => "listings/listing", :collection => @listings %>
</table>
<% else %>
 <p><%= t(:search_returned_no_hits) %></p>
<% end %>
<% end %>