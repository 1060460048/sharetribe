<div class="category">
  <% category_description = category.to_s + "_description" %>
  <% if Listing::MAIN_CATEGORIES.include?(category) %>
    <% if Listing.get_sub_categories(category.to_s) %>
      <a href="/listings/add?category=<%= category %>"><%= t(category) %><span> - <%= t(category_description) %>.</span></a>
    <% else %>
      <a href="/listings/new?category=<%= category %>"><%= t(category) %><span> - <%= t(category_description) %>.</span></a>
    <% end %>
  <% else %>
    <% Listing::MAIN_CATEGORIES.each do |main_category| %>
      <% if Listing.get_sub_categories(main_category.to_s) && Listing.get_sub_categories(main_category.to_s).include?(category) %>
        <a href="/listings/new?category=<%= main_category %>&subcategory=<%= category %>"><%= t(category) %> <span> - <%= t(category_description) %>.</span></a>
      <% end %>
    <% end %>    
  <% end %>
</div>  