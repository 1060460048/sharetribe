<h1>Lisää uusi ilmoitus</h1>
<div id="add_listing_form">
<%= error_messages_for 'listing' %>
<% form_for @listing do |f| %>
<table class="form">
  <tr>
    <td><%= t(:title) %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td><%= t(:author) %></td>
    <td><%= f.text_field :author_id %></td>
  </tr>
  <tr>
    <td><%= t(:status) %></td>
    <td><%= f.text_field :status %></td>
  </tr>
  <tr>
    <td><%= t(:category) %></td>
    <td><%= select("post", "category", ta(Listing::VALID_CATEGORIES)) %></td>
  </tr>
  <tr>
    <td><%= t(:language) %></td>
    <td><%= f.text_field :language %></td>
  </tr>
  <tr>
    <td><%= t(:content) %></td>
    <td><%= f.text_area :content %></td>
  </tr>
</table>
<table class="form">  
  <tr>
    <td><%= submit_tag%></td>    
  </tr>
</table>
<% end %>
</div>
