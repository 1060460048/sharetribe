<div id="listings_header">
  <div id="listings_header_links_left">
    <%= t(:show_read_and_unread_listings) %> <a href="#">1 <%= t(:show_unread_single_listing) %></a> | <%= t(:show_all_listings) %>
  </div>
  <div id="listings_header_links_right">
    <a href="#"><%= t(:mark_all_as_read) %></a>
  </div>  
</div>  		

<div id="listings">
<% unless flash[:notice].blank? %>
  <div id="notification">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1><%= t(@title) %></h1>

<% if (@listings.size > 0)%>
  <table class="listing">
  <%= render :partial => @listings %>
  </table>
<% else %>
  <h3>Ei yhtään ilmoitusta!
<% end %>
</div>