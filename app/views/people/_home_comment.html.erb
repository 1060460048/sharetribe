<div class="listed_object <%= 'unread_conversation' if comment.is_read == 0 %>">
  <div class="listed_object_person_image">
    <%= small_avatar_thumb(comment.author) %>
  </div>
  <div class="listed_message_center">
    <i>
      <b><%= link_to(comment.author.name(session[:cookie]), person_path(comment.author.id)) %></b> <br />
      <%= comment.created_at.to_formatted_s(:basic_date_format_minutes) %>
    </i>
  </div>
  <div class="listed_message_right">
    <b><%= link_to t(:comment_to_listing) + ' "' + h(comment.listing.title) + '"', listing_path(comment.listing) + "#" + comment.id.to_s %></b><br />
    <% dots = comment.content.size > 50 ? "..." : "" %>
    <%= link_to h(comment.content.slice!(0..50)) + dots, listing_path(comment.listing) + "#" + comment.id.to_s %>
  </div>     
</div>