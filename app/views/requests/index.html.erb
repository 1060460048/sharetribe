<div class="browse_objects_header">
<div class="browse_objects_title">
  <%= t(:requests) %> <span class="page_entries_info">(<%= page_entries_info @requests %>)</span>
</div>
<div class="pagination_padding">
  <%= will_paginate @requests, :prev_label => t(:previous), :next_label => t(:next) %>
</div>  
</div>

<% if (@requests.size > 0)%>
  <%= render :partial => "request", :collection => @requests, :as => :request, :spacer_template => "layouts/dashed_line" %>
  <div class="solid_line">
  </div>  
  <div id="browse_objects_footer_left">
    <%= t(:show_requests_on_page) %>:
    <%= create_footer_pagination_links(["10", "30", "50", "all"], "requests") %>
  </div>
  <div class="pagination_padding">
    <%= will_paginate @requests, :prev_label => t(:previous), :next_label => t(:next) %>
  </div>  
  <br />
<% else %>
  <p><%= t(:no_requests) %></p>
<% end %>

