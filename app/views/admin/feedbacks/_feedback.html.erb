<% handled_style = feedback.is_handled == 0 ? "unhandled_feedback" : "" %>
<div class="feedback_item <%= handled_style %>">
  <div class="listed_full_width_object">
    <div class="listed_feedback_checkbox">
      <% if feedback.is_handled == 0 %>
        <%= check_box_tag :feedback %>
      <% else %>
        &nbsp;
      <% end %>  
    </div>  
    <div class="listed_feedback_field">
      <b>
      <% if feedback.author_id == "Anonymous"%>
        Anonymous
      <% elsif feedback.author_id == "virheilmoitus500" %>
        Errorpage500
      <% else %>  
        <%= link_to feedback.author.name(session[:cookie]), person_path(feedback.author) %>
      <% end %>
      </b>
    </div>
    <div class="listed_feedback_field">  
      <%= feedback.created_at.to_formatted_s(:basic_date_format_minutes) %>  
    </div>
    <div class="listed_feedback_field_wider">
      <%= feedback.url %>
    </div>    
    <div class="listed_feedback_content">
      <%= text_with_line_breaks(feedback.content) %>
    </div>
  </div>     
</div>