          <%= t(:email_when_new_message) %>
        </div>
      </div>
      <div class="form_container">    
        <div class="form_right">
          <%= f.check_box :email_when_new_comment %>
          &nbsp;
          <%= t(:email_when_new_comment) %>
        </div>
      </div>
      <div class="form_container">    
        <div class="form_right">
          <%= f.check_box :email_when_new_friend_request %>
          &nbsp;
          <%= t(:email_when_new_friend_request) %>
        </div>
      </div>
      <div class="form_container">    
        <div class="form_right">
          <%= f.check_box :email_when_new_kassi_event %>
          &nbsp;
          <%= t(:email_when_new_kassi_event) %>
        </div>
      </div>
      <div class="form_container">    
        <div class="form_right">
          <%= f.check_box :email_when_new_comment_to_kassi_event %>
          &nbsp;
          <%= t(:email_when_new_comment_to_kassi_event) %>
        </div>
      </div>
      <div class="form_container">    
        <div class="form_right">
          <%= f.check_box :email_when_new_listing_from_friend %>
          &nbsp;
          <%= t(:email_when_new_listing_from_friend) %>
        </div>
      </div>  
      <div class="form_container">
        <div class="form_right">
          <%= submit_tag t(:save), :onclick => "this.disabled=true,this.form.submit();" %>
        </div>
      </div>
      </div>  
    </fieldset>
  <% end %>
