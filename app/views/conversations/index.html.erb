<%= render :partial => "inbox_header" %>

<div class="links_panel">
  <div class="left_float">
    <%= t(:received_messages) %> <span class="page_entries_info">(<%= page_entries_info @person_conversations %>)</span> | 
    <%= link_to t(:sent_messages), sent_person_inbox_path(@current_user) %>
  </div>
  <div class="right_float">
    <%= will_paginate @person_conversations, :prev_label => t(:previous), :next_label => t(:next) %>
  </div>    
</div>

<% if @person_conversations && !@person_conversations.empty? %>
  <%= render :partial => "conversations/conversation", 
             :collection => @person_conversations,
             :spacer_template => "layouts/dashed_line" %>
<% else %>
  <div id="basic_content">  
    <%= t(:no_received_messages) %>
  </div>  
<% end %>

<%= render :partial => "inbox_footer" %>