<div class="browse_conversations_header">
<div class="browse_conversations_title">
  <%= t(:inbox) %>
</div>
</div>

<div class="links_panel">
  <div class="left_float">
    <%= link_to t(:received_messages), person_inbox_index_path(@current_user) %> | 
    <%= t(:sent_messages) %> <span class="page_entries_info">(<%= page_entries_info @person_conversations %>)</span>
  </div>
  <div class="right_float">
    <%= will_paginate @person_conversations, :prev_label => t(:previous), :next_label => t(:next) %>
  </div>
</div>

<div id="conversations">

<% if @person_conversations && !@person_conversations.empty? %>
  <%= render :partial => "conversations/sent_conversation", :collection => @person_conversations %>
<% else %>  
  <%= t(:no_received_messages) %>
<% end %>

</div>

<% if @person_conversations.total_pages > 1 || params[:per_page] %>

<div class="links_panel">
  <div class="left_float">
    <%= t(:show_messages_on_page) %>:
    <%= create_footer_pagination_links(["10", "30", "50", "all"], @pagination_type) %>
  </div>
  <div class="right_float">
    <%= will_paginate @person_conversations, :prev_label => t(:previous), :next_label => t(:next) %>
  </div>    
</div>

<% end %>